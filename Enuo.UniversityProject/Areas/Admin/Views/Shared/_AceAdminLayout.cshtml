<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewContext.RouteData.DataTokens["area"]- @ViewContext.RouteData.Values["controller"]- @ViewContext.RouteData.Values["action"]</title>
    @Styles.Render("~/BootstrapStyles")
    @Styles.Render("~/AceStyles")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/AceJs")
    @Scripts.Render("~/bundles/AceElements")
    @RenderSection("Headerscripts", required: false)
</head>
<body class="no-skin">
    <!--页面顶部布局-->
    <div id="navbar" class="navbar navbar-default">
        <script type="text/javascript">
            try { ace.settings.check('navbar', 'fixed') } catch (e) { }
        </script>
        <div class="navbar-container" id="navbar-container">
            <!-- #section:basics/sidebar.mobile.toggle -->
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                <span class="sr-only">Toggle sidebar</span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>
            </button>

            <div class="navbar-header pull-left">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <small>
                        <i class="fa fa-leaf"></i>
                        University Admin
                    </small>
                </a>
            </div>

            @Html.Partial("_AceLoginPartial")
        </div>
    </div>

    <!--页面内容布局-->
    <div class="main-container" id="main-container">
        <script type="text/javascript">
            try { ace.settings.check('main-container', 'fixed') } catch (e) { }
        </script>
        @Html.Partial("_AceSideBarPartial")

        <!-- main-content -->
        <div class="main-content">
            <div class="main-content-inner">

                @Html.Partial("_AceBreadcrumbsPartial")
                <!--page-content -->
                <div class="page-content">
                    @Html.Partial("_AceSettingPartial")                  
                    <div class="row">
                        <div id="ctx" class="col-xs-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Html.Partial("_AceFooterPartial")

        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
