@model PagedList.IPagedList<Enuo.UniversityProject.Areas.Admin.Models.CourseModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AceAdminLayout.cshtml";
}
<div class="modal-body no-padding">
    <div class="row">
        <table class="table table-striped table-bordered table-hover">
            <caption class="table-header center bolder">Course Table</caption>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Credits</th>
                    <th>Department</th>
                    <th>Operator</th>
                </tr>
            </thead>

            <tbody id="datatable">
                @foreach (var item in Model)
                {
                    <tr id="row-@item.CourseID">
                        <td>@Html.DisplayFor(x => item.CourseID)</td>
                        <td>@Html.DisplayFor(x => item.Title)</td>
                        <td>@Html.DisplayFor(x => item.Credits)</td>
                        @if (item.Department == null)
                        {
                            <td>初始化数据，只能通过页面添加才能显示</td>
                        }
                        else
                        {
                            <td>@Html.DisplayFor(x => item.Department.Name)</td>
                        }
                        <td class="td-actions">
                            <div class="hidden-phone visible-desktop action-buttons">
                                @*<a class="blue" href="@Url.Action("Details",new { id=item.DepartmentID})">
                                        <i class="icon-zoom-in bigger-130">Detail</i>
                                    </a>*@
                                <a class="green" href="@Url.Action("Edit",new { id=item.CourseID})">
                                    <i class="icon-pencil bigger-130">Editor</i>
                                </a>
                                <a data-id="@item.CourseID" class="red" href="#">
                                    <i class="icon-trash bigger-130">Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model != null)
        {  @Html.Partial("_AcePagination")}
    </div>
</div>

