@model Enuo.UniversityProject.Areas.Admin.Models.DepartmentModel
@{
    ViewBag.Title = ViewContext.RouteData.Values["controller"].ToString();
    Layout = "~/Areas/Admin/Views/Shared/_AceAdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Department", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">

        @Html.LabelFor(model => model.DepartmentID, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.DepartmentID, new { @class = "col-xs-10 col-sm-5", @readonly = true })
            <span class="help-inline col-xs-12 col-sm-7">
                <span class="middle">readOnly</span>
            </span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label no-padding-right" })
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Name, new { @class = "col-xs-10 col-sm-5" })
            <span class="help-inline col-xs-12 col-sm-7">
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "middle" })
            </span>
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Budget, new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Budget, new { @class = "col-xs-10 col-sm-5" })
                <span class="help-inline col-xs-12 col-sm-7">
                    @Html.ValidationMessageFor(model => model.Budget, null, new { @class = "middle" })
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.StartDate, new { @class = "col-xs-10 col-sm-5 date-picker" })
                <span class="help-inline col-xs-12 col-sm-7">
                    @Html.ValidationMessageFor(model => model.StartDate, null, new { @class = "middle" })
                </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InstructorID, new { @class = "col-sm-3 control-label no-padding-right" })
            <div class="col-sm-9">
                @Html.DropDownListFor(model => model.InstructorID, (ViewBag.InstructorID as SelectList),htmlAttributes: new { @class = "col-xs-10 col-sm-3" })
                <span class="help-inline col-xs-12 col-sm-7">
                    @Html.ValidationMessageFor(model => model.DepartmentID)
                </span>
            </div>
        </div>

        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <a class="btn btn-back-message-list" href="@Url.Action("Index")">
                    <i class="ace-icon fa fa-arrow-left bigger-110"></i>
                    Back
                </a>

                &nbsp; &nbsp; &nbsp;
                <button class="btn btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Edit
                </button>

                &nbsp; &nbsp; &nbsp;
                <button class="btn" type="reset">
                    <i class="ace-icon fa fa-undo bigger-110"></i>
                    Reset
                </button>
            </div>
        </div>
}

